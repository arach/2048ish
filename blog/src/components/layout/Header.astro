---
import { themeConfig } from '@/config'
import ThemeToggle from '@/components/ui/ThemeToggle.astro'
import { getMainAppUrl } from '@/utils/paths'

const mainAppUrl = getMainAppUrl()
const blogBaseUrl = import.meta.env.BASE_URL || '/'
---

<header>
  <nav>
    <div class="brand">
      <a href={blogBaseUrl} class="brand-link">
        <span class="brand-number">2048</span>
        <span class="brand-suffix">ish</span>
        <span class="brand-blog">blog</span>
      </a>
    </div>
    <div class="nav-links">
      <a href={mainAppUrl} class="play-link">ðŸŽ® Play Game</a>
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 1rem 0;
    border-bottom: 2px solid var(--border);
  }
  
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .brand {
    display: flex;
    align-items: center;
  }
  
  .brand-link {
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    transition: all 0.2s ease;
  }
  
  .brand-link:hover {
    transform: translateY(-1px);
  }
  
  .brand-number {
    font-family: 'Silkscreen', monospace;
    font-size: 3.5rem;
    font-weight: 400;
    color: #F59563; /* 2048 orange accent */
    letter-spacing: 0.05em;
    text-shadow: 0 2px 4px rgba(245, 149, 99, 0.2);
  }
  
  .brand-suffix {
    font-family: 'Silkscreen', monospace;
    font-size: 1.8rem;
    font-weight: 400;
    color: var(--text-primary);
    letter-spacing: 0.05em;
    margin-left: -0.1em;
  }
  
  .brand-blog {
    font-family: Inter, system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    margin-left: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    transition: all 0.2s ease;
  }
  
  .brand-link:hover .brand-blog {
    background: #F59563;
    color: white;
    border-color: #F59563;
  }
  
  .nav-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .play-link {
    font-family: Inter, system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 0.5rem 1rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    transition: all 0.2s ease;
  }
  
  .play-link:hover {
    background: #F59563;
    color: white;
    border-color: #F59563;
    transform: translateY(-1px);
  }
  
  @media (max-width: 640px) {
    .brand-number {
      font-size: 2.5rem;
    }
    
    .brand-suffix {
      font-size: 1.4rem;
    }
    
    .brand-blog {
      font-size: 0.75rem;
      margin-left: 0.25rem;
      padding: 0.375rem 0.75rem;
    }
    
    .nav-links {
      gap: 0.5rem;
    }
    
    .play-link {
      font-size: 0.75rem;
      padding: 0.375rem 0.75rem;
    }
  }
</style>
